<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF1A1A2E"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Welcome Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome back"
                    android:textSize="16sp"
                    android:textColor="#FFAAAAAA" />

                <TextView
                    android:id="@+id/welcome_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good Morning"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFFFF" />

            </LinearLayout>

            <!-- Status Indicator -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <View
                    android:id="@+id/status_indicator"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/circle_important"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active"
                    android:textSize="12sp"
                    android:textColor="#FF03DAC5" />

            </LinearLayout>

        </LinearLayout>

        <!-- Permission Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/permission_status_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#FFFF5722"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_notification"
                    android:layout_marginEnd="16dp"
                    android:tint="#FFFFFFFF" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Permission Required"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFFFF" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Grant notification access to start monitoring"
                        android:textSize="14sp"
                        android:textColor="#FFFFFFFF"
                        android:alpha="0.9"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/permission_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grant"
                    android:textColor="#FFFF5722"
                    android:backgroundTint="#FFFFFFFF"
                    style="@style/Widget.Material3.Button" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Quick Stats Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Unread Count Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#FF2D2D44">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/unread_count_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="#FF03DAC5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unread"
                        android:textSize="14sp"
                        android:textColor="#FFAAAAAA"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Important Apps Count Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#FF2D2D44">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/important_apps_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="#FFFF9800" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Important Apps"
                        android:textSize="14sp"
                        android:textColor="#FFAAAAAA"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Recent Important Notifications Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#FF2D2D44">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Recent Important"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFFFF" />

                    <Button
                        android:id="@+id/view_all_button"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="View All"
                        android:textSize="12sp"
                        android:minWidth="0dp"
                        android:paddingHorizontal="16dp"
                        style="@style/Widget.Material3.Button.TextButton" />

                </LinearLayout>

                <!-- Recent Notifications List -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recent_notifications_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/empty_recent_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_notification"
                        android:alpha="0.4"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No important notifications yet"
                        android:textSize="14sp"
                        android:textColor="#FFAAAAAA"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mark apps as important to see alerts here"
                        android:textSize="12sp"
                        android:textColor="#FF777777"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Quick Actions Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#FF2D2D44">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quick Actions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFFFF"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Mark All Read Button -->
                    <Button
                        android:id="@+id/mark_all_read_button"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1.2"
                        android:layout_marginEnd="8dp"
                        android:text="@string/mark_all_read_compact"
                        android:textSize="14sp"
                        android:enabled="false"
                        android:backgroundTint="@color/success_color"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:ellipsize="end"
                        style="@style/Widget.Material3.Button" />

                    <!-- Manage Apps Button -->
                    <Button
                        android:id="@+id/manage_apps_button"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="0.8"
                        android:layout_marginStart="8dp"
                        android:text="Apps"
                        android:textSize="14sp"
                        style="@style/Widget.Material3.Button.TextButton" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- App Status Info -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#FF2D2D44">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="App Status"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFFFF"
                    android:layout_marginBottom="12dp" />

                <!-- Monitoring Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <View
                        android:id="@+id/monitoring_indicator"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/circle_important"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/monitoring_status_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Monitoring notifications"
                        android:textSize="14sp"
                        android:textColor="#FFAAAAAA" />

                </LinearLayout>

                <!-- Last Notification Time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="#FF777777"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/last_notification_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No notifications received yet"
                        android:textSize="14sp"
                        android:textColor="#FF777777" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>