<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="2dp"
    android:layout_marginHorizontal="6dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="#FF2D2D44"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="top">

        <!-- App Icon with Important Indicator -->
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FF3A3A52">

                <ImageView
                    android:id="@+id/app_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="App Icon" />

            </androidx.cardview.widget.CardView>

            <!-- Important Indicator -->
            <View
                android:id="@+id/importance_indicator"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="-2dp"
                android:layout_marginEnd="-2dp"
                android:background="@drawable/circle_important"
                android:visibility="gone" />

        </FrameLayout>

        <!-- Notification Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Header Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="2dp">

                <TextView
                    android:id="@+id/app_name_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#FF03DAC5"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/timestamp_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#FF777777"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Notification Title -->
            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#FFFFFFFF"
                android:layout_marginBottom="2dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Notification Body -->
            <TextView
                android:id="@+id/body_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#FFCCCCCC"
                android:layout_marginBottom="6dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Action Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Read Status Indicator -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:id="@+id/read_status_indicator"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:background="@drawable/circle_important"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/read_status_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unread"
                        android:textSize="11sp"
                        android:textColor="#FF03DAC5" />

                </LinearLayout>

                <!-- Mark Read Button -->
                <Button
                    android:id="@+id/mark_read_button"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Mark Read"
                    android:textSize="11sp"
                    android:textColor="@color/success_color"
                    android:minWidth="0dp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    style="@style/Widget.Material3.Button.TextButton" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>