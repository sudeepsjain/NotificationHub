<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF1A1A2E"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customize your notification experience"
                    android:textSize="14sp"
                    android:textColor="#FFAAAAAA"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- App Status Indicator -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <View
                    android:id="@+id/app_status_indicator"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/circle_important"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/app_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active"
                    android:textSize="12sp"
                    android:textColor="#FF03DAC5" />

            </LinearLayout>

        </LinearLayout>

        <!-- Permission Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/permission_status_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#FF2D2D44"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_notification"
                        android:layout_marginEnd="12dp"
                        app:tint="#FFFF5722" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Setup Required"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFFFF" />

                </LinearLayout>

                <!-- Permission Items -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Notification Access -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <View
                            android:id="@+id/notification_permission_indicator"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/circle_important"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Notification Access"
                            android:textSize="14sp"
                            android:textColor="#FFFFFFFF" />

                        <Button
                            android:id="@+id/notification_permission_button"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Grant"
                            android:textSize="12sp"
                            android:minWidth="0dp"
                            android:paddingHorizontal="16dp"
                            style="@style/Widget.Material3.Button.TextButton" />

                    </LinearLayout>

                    <!-- Battery Optimization -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <View
                            android:id="@+id/battery_permission_indicator"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/circle_important"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Battery Optimization"
                            android:textSize="14sp"
                            android:textColor="#FFFFFFFF" />

                        <Button
                            android:id="@+id/battery_optimization_button"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Disable"
                            android:textSize="12sp"
                            android:minWidth="0dp"
                            android:paddingHorizontal="16dp"
                            style="@style/Widget.Material3.Button.TextButton" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Notification Settings -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#FF2D2D44">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_notification"
                        android:layout_marginEnd="12dp"
                        app:tint="#FF03DAC5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notification Settings"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFFFF" />

                </LinearLayout>

                <!-- Re-alert Interval -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Re-alert Frequency"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFFFF"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/re_alert_interval_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Re-alert every 15 minutes"
                    android:textSize="14sp"
                    android:textColor="#FFAAAAAA"
                    android:layout_marginBottom="8dp" />

                <SeekBar
                    android:id="@+id/re_alert_seek_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="59"
                    android:progress="14"
                    android:layout_marginBottom="16dp" />

                <!-- Silent Notifications -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Silent Notifications"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFFFF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Show notifications without sound"
                            android:textSize="14sp"
                            android:textColor="#FFAAAAAA"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/silent_notifications_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- DND Behavior -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Do Not Disturb"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFFFF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Allow alerts during DND mode"
                            android:textSize="14sp"
                            android:textColor="#FFAAAAAA"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/dnd_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Notification Management -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#FF2D2D44">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_settings"
                        android:layout_marginEnd="12dp"
                        app:tint="#FF9C27B0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/permission_management"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFFFF" />

                </LinearLayout>

                <!-- App Notification Settings -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp"
                    android:padding="12dp"
                    android:background="#33FFFFFF">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/app_notifications"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFFFF" />

                        <TextView
                            android:id="@+id/notification_status_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/checking_status"
                            android:textSize="14sp"
                            android:textColor="#FFAAAAAA"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <View
                        android:id="@+id/notification_status_indicator"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/circle_important"
                        android:layout_marginEnd="12dp" />

                </LinearLayout>

                <!-- Notification Permissions Button -->
                <Button
                    android:id="@+id/manage_notifications_button"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="@string/manage_app_notifications"
                    android:textSize="14sp"
                    android:backgroundTint="#FF9C27B0"
                    style="@style/Widget.Material3.Button" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Data Management -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#FF2D2D44">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_storage"
                        android:layout_marginEnd="12dp"
                        app:tint="#FFFF9800" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data Management"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFFFF" />

                </LinearLayout>

                <!-- Retention Period -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data Retention"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFFFF"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/retention_days_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Keep notifications for 7 days"
                    android:textSize="14sp"
                    android:textColor="#FFAAAAAA"
                    android:layout_marginBottom="8dp" />

                <SeekBar
                    android:id="@+id/retention_seek_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="29"
                    android:progress="6"
                    android:layout_marginBottom="16dp" />

                <!-- Storage Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:background="#33FFFFFF"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Storage Used"
                        android:textSize="14sp"
                        android:textColor="#FFFFFFFF" />

                    <TextView
                        android:id="@+id/storage_info_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calculating..."
                        android:textSize="14sp"
                        android:textColor="#FF03DAC5" />

                </LinearLayout>

                <!-- Clear Data Button -->
                <Button
                    android:id="@+id/clear_data_button"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Clear All Data"
                    android:textSize="14sp"
                    android:backgroundTint="#FFFF5722"
                    style="@style/Widget.Material3.Button" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


        <!-- About -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#FF2D2D44">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_info"
                        android:layout_marginEnd="12dp"
                        app:tint="#FF2196F3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About Notification Hub"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFFFF" />

                </LinearLayout>

                <!-- App Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Version"
                        android:textSize="14sp"
                        android:textColor="#FFAAAAAA" />

                    <TextView
                        android:id="@+id/version_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.0.0"
                        android:textSize="14sp"
                        android:textColor="#FFFFFFFF" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Privacy"
                        android:textSize="14sp"
                        android:textColor="#FFAAAAAA" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Local only"
                        android:textSize="14sp"
                        android:textColor="#FF4CAF50" />

                </LinearLayout>

                <!-- About Button -->
                <Button
                    android:id="@+id/about_button"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="More Information"
                    android:textSize="14sp"
                    style="@style/Widget.Material3.Button.TextButton" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>